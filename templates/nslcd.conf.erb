# /etc/nslcd.conf
# nslcd configuration file. See nslcd.conf(5)
# for details.

# The user and group nslcd should run as.
uid nslcd
gid nslcd

# The location at which the LDAP server(s) should be reachable.
<% scope.lookupvar('::ldap_auth::params::_servers').each do |servername| -%>
uri ldap://<%= servername %>
<% end -%>

# The search base that will be used for all queries.
base <%= scope.lookupvar('::ldap_auth::params::_base') %>

# The LDAP protocol version to use.
#ldap_version 3

# The DN to bind with for normal lookups.
binddn <%= scope.lookupvar('::ldap_auth::params::_binddn') %>
bindpw <%= scope.lookupvar('::ldap_auth::params::_bindpw') %>

<% scope.lookupvar('::ldap_auth::params::_filter').each do |f| -%>
filter <%= f %>
<% end -%>

# The DN used for password modifications by root.
#rootpwmoddn !NO-MODIFICATIONS!

# SSL options
#ssl off
#tls_reqcert never

# The search scope.
#scope sub

